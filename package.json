{
  "name": "multiplayer-game",
  "version": "1.0.0",
  "description": "Multiplayer game using Express + Socket.io",
  "main": "./src/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently  \"npm run watch:css\" \"nodemon\"",
    "start": "node ./dist/index.js",
    "build:css": "tailwindcss -i ./src/tailwind.css -o ./src/public/styles/tailwind.css --minify",
    "watch:css": "tailwindcss -i ./src/tailwind.css -o ./src/public/styles/tailwind.css --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mentalitydark/multiplayer-game.git"
  },
  "author": "MentalityDark",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mentalitydark/multiplayer-game/issues"
  },
  "homepage": "https://github.com/mentalitydark/multiplayer-game#readme",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "html-minifier": "^4.0.0",
    "nodemon": "^3.0.2",
    "tailwindcss": "^3.4.0"
  }
}
