{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "sort-imports": ["error", { "allowSeparatedGroups": true }],
        "eqeqeq": "error",
        "no-extra-boolean-cast": "error",
        "no-magic-numbers": "error"
    }
}
